[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    ENV,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    .coverage
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F841
